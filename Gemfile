source 'https://rubygems.org'

# Jekyll 4.x - version la plus récente
gem 'jekyll', '~> 4.3'

# Plugins essentiels pour Jekyll 4.x
group :jekyll_plugins do
  # Plugin SEO
  gem 'jekyll-seo-tag', '~> 2.8'
  
  # Plugin pour les sitemaps
  gem 'jekyll-sitemap', '~> 1.4'
  
  # Plugin pour les flux RSS
  gem 'jekyll-feed', '~> 0.17'
  
  # Plugin pour les redirections
  gem 'jekyll-redirect-from', '~> 0.16'
  
  # Plugin pour les liens relatifs
  gem 'jekyll-relative-links', '~> 0.6'
  
  # Plugin pour les mentions GitHub
  gem 'jekyll-mentions', '~> 1.6'
  
  # Plugin pour les gists GitHub
  gem 'jekyll-gist', '~> 1.5'
  
  # Plugin pour les métadonnées GitHub
  gem 'jekyll-github-metadata', '~> 2.16'
end

# Groupe pour le développement local
group :development do
  # Gem pour le développement local
  gem 'webrick', '~> 1.8'
end